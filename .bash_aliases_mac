# Jupyter notes
jnote() {
  if [ -n "$1" ]
  then
    file="$1"
  else
    cp ~/Drive/Notes/new-notebook.ipynb ./new-notebook.ipynb
    file="new-notebook.ipynb"
  fi
  jupyter notebook $file &
}
