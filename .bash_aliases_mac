# Mac specific aliases

# ls issues on mac (works on linux)
alias ll="ls -l"
alias la="ls -la"
alias ls="ls"
alias note='vim +RecentNotes'
alias cdp='cd ~/Projects'
alias cdn='cd ~/Drive/Notes'
alias cdd='cd ~/Work/Divirod'

# skim
alias skim='open -a skim'

# open desktop
alias od='open ~/Desktop'

# open text edit
text() {
  open -a TextEdit $1
}

# Google
google() {
      search=""
      echo "Googling: $@"
      for term in $@; do
      search="$search%20$term"
      done
      open http://www.google.com/search?q=$search
}

scholar() {
      search=""
      echo "Schoogling: $@"
      for term in $@; do
      search="$search%20$term"
      done
      open http://scholar.google.com/scholar?q=$search
}

gmail(){
  open http://gmail.com
}

youtube(){
      search=""
      echo "youtubing: $@"
      for term in $@; do
      search="$search%20$term"
      done
      open http://www.youtube.com/results?search_query=$search
}

weather(){
      search="%20weather"
      echo "Weathering: $@"
      for term in $@; do
      search="$search%20$term"
      done
      open http://www.google.com/search?q=$search
}
