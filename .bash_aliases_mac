# texâ€™ed notes
tnote()
{
 if [ -n "$1" ]; then
   NAME="$1";
   DIR=~/Drive/Notes/TEX/$NAME;
   mkdir -p $DIR;
   cd $DIR;
   if [ -f ~/Drive/Notes/TEX/.template.tex ]; then
     cp ~/Drive/Notes/TEX/.template.tex $DIR/$NAME.tex;
     pdflatex $DIR/$NAME.tex > /dev/null;
     (open -ga skim $DIR/$NAME.pdf &);
     vim $DIR/$NAME.tex;
   else 
     vim $DIR/$NAME.tex;
   fi
 else
   vim +"RecentNotes tex";
 fi
}

