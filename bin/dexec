#!/bin/bash
if [ -n "$1" ]              # Tested variable is quoted.
then
 # get running containers
 c_ids=`docker ps -q --filter "name=$1*"`
 echo $c_ids

 if [ `echo $c_ids | grep -c " " ` -gt 0 ]
  then 
   echo "Multiple containers $c_ids running. Provide a unique name"
 else 
  echo "Exec-ing into $c_ids"  
  docker exec -it $c_ids /bin/bash
 fi
fi 
